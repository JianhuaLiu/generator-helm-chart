<% if (workload && workload.volumes.length) { %>
      volumes:
        - name: data
          {{- if .Values.persistence.enabled }}
          persistentVolumeClaim:
            claimName: {{ .Values.persistence.existingClaim | default (include "<%- name %>.fullname" . ) }}
          {{- else }}
          emptyDir: {}
          {{- end }}<% } %>