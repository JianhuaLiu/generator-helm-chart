<% if (_.find(databases, { name: 'redis'})) { %>
  {{- $redis := .Values.config.redis }}
  {{- if (empty $redis.host) }}
  redis_host: {{ template "<%- name %>.fullname" . }}-redis
  redis_port: 6379
  {{- else }}
  redis_host: {{ $redis.host | quote }}
  redis_port: {{ $redis.port | quote }}
  {{- end }}
  redis_database: {{ $redis.database | quote }}
  redis_username: {{ $redis.username | quote }}<% } %>