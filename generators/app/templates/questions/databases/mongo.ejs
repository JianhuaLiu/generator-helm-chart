<% if (_.find(databases, { name: 'mongo'})) { %>

# Mongo Config
  - variable: config.mongo.internal
    default: true
    description: ''
    type: boolean
    required: true
    label: internal
    group: 'Mongo Config'
  - variable: config.mongo.host
    default: ''
    description: ''
    type: string
    required: false
    label: host
    show_if: config.mongo.internal=false
    group: 'Mongo Config'
  - variable: config.mongo.database
    default: <%- name %>
    description: ''
    type: string
    required: true
    label: database
    group: 'Mongo Config'
  - variable: config.mongo.password
    default: ''
    description: ''
    type: password
    required: false
    label: password
    show_if: config.mongo.internal=false
    group: 'Mongo Config'
  - variable: config.mongo.port
    default: 27017
    description: ''
    type: int
    min: 0
    max: 50000
    required: true
    label: port
    show_if: config.mongo.internal=false
    group: 'Mongo Config'
  - variable: config.mongo.url
    default: ''
    description: ''
    type: string
    required: false
    label: url
    show_if: config.mongo.internal=false
    group: 'Mongo Config'
  - variable: config.mongo.username
    default: ''
    description: ''
    type: string
    required: false
    label: username
    show_if: config.mongo.internal=false
    group: 'Mongo Config'<% } %>