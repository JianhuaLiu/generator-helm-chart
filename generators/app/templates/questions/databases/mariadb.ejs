<% if (_.find(databases, { name: 'mariadb'})) { %>

# Mariadb Config
  - variable: config.mariadb.internal
    default: true
    description: ''
    type: boolean
    required: true
    label: 'mariadb internal'
    group: 'Mariadb Config'
  - variable: config.mariadb.host
    default: ''
    description: ''
    type: string
    required: false
    label: host
    show_if: config.mariadb.internal=false
    group: 'Mariadb Config'
  - variable: config.mariadb.database
    default: <%- name %>
    description: ''
    type: string
    required: true
    label: database
    group: 'Mariadb Config'
  - variable: config.mariadb.password
    default: root
    description: ''
    type: password
    required: true
    label: password
    show_if: config.mariadb.internal=false
    group: 'Mariadb Config'
  - variable: config.mariadb.port
    default: 3306
    description: ''
    type: int
    min: 0
    max: 50000
    required: true
    label: port
    show_if: config.mariadb.internal=false
    group: 'Mariadb Config'
  - variable: config.mariadb.url
    default: ''
    description: ''
    type: string
    required: false
    label: url
    show_if: config.mariadb.internal=false
    group: 'Mariadb Config'
  - variable: config.mariadb.username
    default: root
    description: ''
    type: string
    required: true
    label: username
    show_if: config.mariadb.internal=false
    group: 'Mariadb Config'<% } %>