<% if (_.find(databases, { name: 'mysql'})) { %>

# MySQL Config
  - variable: config.mysql.internal
    default: true
    description: ''
    type: boolean
    required: true
    label: 'mysql internal'
    group: 'MySQL Config'
  - variable: config.mysql.host
    default: ''
    description: ''
    type: string
    required: false
    label: 'mysql host'
    show_if: config.mysql.internal=false
    group: 'MySQL Config'
  - variable: config.mysql.database
    default: <%- name %>
    description: ''
    type: string
    required: true
    label: 'mysql database'
    group: 'MySQL Config'
  - variable: config.mysql.password
    default: root
    description: ''
    type: password
    required: true
    label: 'mysql password'
    group: 'MySQL Config'
  - variable: config.mysql.port
    default: 3306
    description: ''
    type: int
    min: 0
    max: 50000
    required: true
    label: 'mysql port'
    show_if: config.mysql.internal=false
    group: 'MySQL Config'
  - variable: config.mysql.url
    default: ''
    description: ''
    type: string
    required: false
    label: 'mysql url'
    show_if: config.mysql.internal=false
    group: 'MySQL Config'
  - variable: config.mysql.username
    default: root
    description: ''
    type: string
    required: true
    label: 'mysql username'
    show_if: config.mysql.internal=false
    group: 'MySQL Config'<% } %>