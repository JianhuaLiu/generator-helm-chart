<% if (_.find(databases, { name: 'elasticsearch'})) { %>

# Elasticsearch Config
  - variable: config.elasticsearch.internal
    default: true
    description: ''
    type: boolean
    required: true
    label: internal
    group: 'Elasticsearch Config'
  - variable: config.elasticsearch.host
    default: ''
    description: ''
    type: string
    required: false
    label: host
    show_if: config.elasticsearch.internal=false
    group: 'Elasticsearch Config'
  - variable: config.elasticsearch.database
    default: <%- name %>
    description: ''
    type: string
    required: true
    label: database
    group: 'Elasticsearch Config'
  - variable: config.elasticsearch.password
    default: elastic
    description: ''
    type: password
    required: true
    label: password
    group: 'Elasticsearch Config'
  - variable: config.elasticsearch.port
    default: 9200
    description: ''
    type: int
    min: 0
    max: 50000
    required: true
    label: port
    show_if: config.elasticsearch.internal=false
    group: 'Elasticsearch Config'
  - variable: config.elasticsearch.url
    default: ''
    description: ''
    type: string
    required: false
    label: url
    show_if: config.elasticsearch.internal=false
    group: 'Elasticsearch Config'
  - variable: config.elasticsearch.username
    default: elastic
    description: ''
    type: string
    required: true
    label: username
    show_if: config.elasticsearch.internal=false
    group: 'Elasticsearch Config'<% } %>