<% if (workloads.length || databases.length) { %>

# Images<% for (var i = 0; i < workloads.length; i++) { workload = workloads[i]; %>
  - variable: images.<%- workload.name %>.repository
    default: <%- workload.image.substr(0, workload.image.indexOf(':')) %>
    description: ''
    type: string
    required: true
    label: '<%- workload.name %> repository'
    group: Images
  - variable: images.<%- workload.name %>.tag
    default: <%- workload.image.substr(workload.image.indexOf(':') + 1) %>
    description: ''
    type: string
    required: true
    label: '<%- workload.name %> tag'
    group: Images<% } for (var i = 0; i < databases.length; i++) { database = databases[i]; %>
  - variable: images.<%- database.name %>.repository
    default: <%- database.explorerImage.substr(0, database.explorerImage.indexOf(':')) %>
    description: ''
    type: string
    required: true
    label: '<%- database.name %> repository'
    group: Images
  - variable: images.<%- database.name %>.tag
    default: <%- database.explorerImage.substr(database.explorerImage.indexOf(':') + 1) %>
    description: ''
    type: string
    required: true
    label: '<%- database.name %> tag'
    group: Images<% }} %>
